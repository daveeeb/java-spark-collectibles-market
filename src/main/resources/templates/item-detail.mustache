<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>{{name}}</title>
    <link rel="stylesheet" href="/style.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>
<div class="container">
    <h1>{{name}}</h1>
    <div class="item-description">
        <p id="price-{{id}}" class="item-price">{{price}}</p>
        <p>{{description}}</p>

        <div class="form-container">
            <form id="offer-form" action="/api/offer" method="post">
                <input type="hidden" name="id" value="{{id}}">
                <label>Your name</label>
                <input type="text" name="buyer" required>
                <label>Amount (USD)</label>
                <input type="number" name="amount" step="0.01" required>
                <button class="btn" type="submit">Send offer</button>
            </form>

            <div id="offer-success" class="hidden">Offer sent!</div>
            <div id="offer-error" class="hidden"></div>
        </div>
    </div>
</div>

<script src="/script.js"></script>
</body>
</html>
